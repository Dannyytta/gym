---
interface LinkItem {
  href: string;
  label: string;
}

interface HourItem {
  label: string;
  value: string;
}

interface NewsletterContent {
  title: string;
  description: string;
}

interface Props {
  brandName: string;
  brandHighlight: string;
  tagline: string;
  quickLinks: LinkItem[];
  hours: HourItem[];
  newsletter: NewsletterContent;
  copyright: string;
}

const {
  brandName,
  brandHighlight,
  tagline,
  quickLinks,
  hours,
  newsletter,
  copyright,
} = Astro.props;
const brandSuffix = brandName.replace(brandHighlight, "");
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-col">
        <div class="logo">
          <a href="#"><span>{brandHighlight}</span>{brandSuffix}</a>
        </div>
        <p>{tagline}</p>
        <div class="social">
          <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
          <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
          <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
          <a href="#" aria-label="YouTube"><i class="fab fa-youtube"></i></a>
        </div>
      </div>
      <div class="footer-col">
        <h3>Enlaces RÃ¡pidos</h3>
        <ul>
          {quickLinks.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-col">
        <h3>Horario</h3>
        <ul class="horario">
          {hours.map((item) => (
            <li>{item.label}: <span>{item.value}</span></li>
          ))}
        </ul>
      </div>
      <div class="footer-col">
        <h3>{newsletter.title}</h3>
        <p>{newsletter.description}</p>
        <form class="newsletter-form">
          <input type="email" placeholder="Tu Email" required />
          <button type="submit"><i class="fas fa-paper-plane"></i></button>
        </form>
      </div>
    </div>
  </div>
  <div class="copyright">
    <div class="container">
      <p>{copyright}</p>
    </div>
  </div>
</footer>
